<!--Sign up page for providers-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Eos-Sign Up</title>
    <script src="/js/signUp.js"></script>
    <link rel="stylesheet" href="/css/signUp.css">
    <script src="js/signUp.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <%- include("./header_login.ejs") %>

    <div class="container">
        <div class="form-style-5">
            <form method="POST" action="/users/providerRegister">
                <fieldset>
                    <legend><span class="number"> </span> Start</legend>
                    <!--<input type="nickname" name="field1_1" placeholder="Your Preferred Name">-->
                    <input type="email" id="icEmail" name="email" placeholder="Institution/Company Email *">
                    <input type="text" id="icName" name="username" placeholder="Institution/Company Name *">
                    <input type="password" id="icPassword" name="password" placeholder="Institution/Company Password*">
                    <input type="password" id="icPassword2" name="password2" placeholder="Confirm Password*">
                    <!--<textarea name="field3" placeholder="About yourself"></textarea>-->
                    <label for="job">Industry:</label>
                    <select id="job" name="field4" value="select">
                        <!--<optgroup label="Indoors">-->
                            <option value="Architecture">Architecture</option>
                            <option value="Arts">Arts</option>
                            <option value="Biomedicine">Biomedicine</option>
                            <option value="Commerce">Commerce</option>
                            <option value="Design">Design</option>
                            <option value="Music">Music</option>
                            <option value="Science">Science</option>
                            <option value="etc">...</option>
                        <!--</optgroup>-->
                    </select>
                </fieldset>
                <input type="submit" value="Register and Login"/>
            </form>
        </div>
    </div>


</body>
</html>