                <div class="center">
                <%for(let i=0; i< posts.length; i++){ %>

                <div class="grid-item">
                    <a href="/post/<%= posts[i]._id %>" class="button ali">
                        <h1><%= posts[i].title %></h1>
                        <p><%=  posts[i].brief %></p>
                    </a>
                </div>


                <%}%>
                </div>
            </div>
        </div>
