<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add A Post</title>
    <%- include("./providerHomeTopbar.ejs") %>
    <link rel="stylesheet" href="/css/postAdd.css">
    <!-- include libraries(jQuery, bootstrap) -->
    <link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.css" rel="stylesheet">
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.js"></script>

    <!-- include summernote css/js -->
    <link href="/css/summernote.css" rel="stylesheet">
    <script src="/js/summernote.js"></script>
</head>
<body>

    <div class="editsec">
        <div class="form-group" id="title">
            <label for="exampleTextarea"><h1>Example: Add A Post Title</h1></label>
            <div id="summernote-title"></div>

                <div class="form-group" id="brief">
                    <label for="exampleTextarea"><h1>Post Brief</h1></label>
                    <div id="summernote-brief"></div>


                        <div class="form-group" id="detail">
                            <label for="exampleTextarea"><h1>Post Details</h1></label>
                            <div id="summernote-detail"></div>

                                <div class="postnew">
                                    <button onclick="{location.href='/post2'}">Post Now!</button>
                                </div>
                        </div>
                </div>
        </div>

    </div>


    <script>
        $(document).ready(function() {
            $('#summernote-title').summernote({
                placeholder: 'Hello bootstrap 4',
                tabsize: 2,
                height: 100
            });
        });
        $(document).ready(function() {
            $('#summernote-brief').summernote({
                placeholder: 'Hello bootstrap 4',
                tabsize: 2,
                height: 200
            });
        });
        $(document).ready(function() {
            $('#summernote-detail').summernote({
                placeholder: 'Hello bootstrap 4',
                tabsize: 2,
                height: 400
            });
        });
    </script>
</body>
</html>

