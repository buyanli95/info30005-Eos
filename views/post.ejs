<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Post</title>
    <script src="/js/goBack.js"></script>

    <!--use require.js-->
    <!--<script src="/js/require.js" defer async="true" data-main="/js/likedPost"></script>-->

    <!--<script src="/models/likedPost.js"></script>-->
    <script src="/js/likedPost.js"></script>

    <link rel="stylesheet" href="/css/post.css" type="text/css">
    <link rel="stylesheet" href="/css/participant_home_topbar.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!--like-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
<body>
    <%- include("./participantHomeTopbar.ejs") %>

    <!--main page-->
    <div class="main">
        <!--title-->
        <div class="title">
            <h1 id="tit"><%=  post.title %></h1>
        </div>
        <!--article-->
        <div class="main_box">
            <!--status bar-->
            <div class="main_box sidebar">
                <%=  post.cname %>
                <%=  post.date %>

            </div>

            <div class="main_box content">

                <div class="brief">
                    <%=  post.brief %><br>
                    <p>The University of Melbourne is a public research university located in Melbourne, Australia. Founded in 1853, it is Australia's second oldest university and the oldest in Victoria.[7] Times Higher Education ranks Melbourne as 33rd in the world,[8] while the Academic Ranking of World Universities places Melbourne 40th in the world (both first in Australia)</p>
                </div>

                <p id="context">
                    <%=  post.detail %><br>
                <p>The University of Melbourne is a public research university located in Melbourne, Australia. Founded in 1853, it is Australia's second oldest university and the oldest in Victoria.[7] Times Higher Education ranks Melbourne as 33rd in the world,[8] while the Academic Ranking of World Universities places Melbourne 40th in the world (both first in Australia)</p>
                </p>

            </div>

            <div class="main_box sidebar"></div>
            <div id="postid"><%= post._id%></div>

        </div>
    </div>
    <!--bottom-->
    <div class ="footer">
        <!--button-->
        <div class="Like">
            <div class="box">
                <!--<input name="like" type="image" src="image/Like.svg" onclick="this.src='image/Like2.svg'" />-->
                <%
                const postid =  post._id;
                const date = post.date;
                const postobj = post;
                %>

                <!--<input name="like" type="image" src="/image/Like.svg" onclick="likeAPost(' ' + postid + ' ')"; />-->
                <input name="like" type="image" src="/image/Like.svg" onclick="likeAPost('<%= username %>', '<%= postid%>', '<%= date%>');" />
            </div>
            <p>Like</p>
        </div>

        <div class="Apply">
            <div class="box">
                <input name="apply" type="image"  src="/image/Apply.svg" onclick="this.src='image/Apply2.svg'"/>
            </div>
            <p>Join</p>
        </div>
    </div>


</body>



</html>